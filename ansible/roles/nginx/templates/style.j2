.side-bar { 
  width: 270px;
}

.side-bar-title {
  font-family: opensans, Arial, sans-serif;
  text-transform: uppercase;
  font-size: 14px;
  font-weight: 700;
  color: rgb(0, 0, 0);
  text-align: center;
  margin: 0;
}

