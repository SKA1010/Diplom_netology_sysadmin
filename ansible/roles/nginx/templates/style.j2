  border: none;
  background-color: rgb(181, 159, 91);
  background-image: url(https://netology-code.github.io/html-2-diploma/sources/images/search.svg);
  background-repeat: no-repeat;
  background-size: 20px auto;  
  background-position: center center;
  cursor: pointer;
}

 .button-search:focus {
  outline: none;
  border-color: none;
  cursor: pointer;
  background-color: #000000;
}

.field {
  width: 100%;
  border: none;
  background-color: rgb(243, 247, 245);
  font-family: opensans, Arial, sans-serif;
  font-size: 13px;
  font-weight: 400; 
  padding: 10px 20px;
  cursor: text;
}

.field:focus {
  outline: none;
  border-color: none;
} 

.side-bar-mailing, 
.side-bar-tegs, 
.side-bar-topics {
  margin-bottom: 60px;
}

.mailing {
  display: flex;
  flex-direction: column;
}

.box {
  display: block;
  height: 48px;
  border: none;
  background-color: rgb(243, 247, 245);
  font-family: opensans, Arial, sans-serif;
  font-size: 13px;
  font-weight: 400; 
  padding: 10px 20px;
  cursor: text;
}

.box:focus {
  outline: none;
  border: none;
}

.button-mailing {
  height: 48px;
  width: 100%;
  font-family: opensans, Arial, sans-serif;
  text-transform: uppercase;
  font-size: 14px;
  font-weight: 700;
  color: rgb(255, 255, 255);
  text-align: center;
  border: none;
  background-color: rgb(181, 159, 91);
  background-repeat: no-repeat;
  cursor: pointer;
  margin-top: 20px;
}

.button-mailing:hover {
  outline: none;
  border: none;
  cursor: pointer;
  background-color: #000000;
} 

