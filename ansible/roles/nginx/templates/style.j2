  margin-bottom: 35px;
}

.post-date {
  font-family: opensans, Arial, sans-serif;
  text-decoration: none;
  font-size: 12px;
  font-weight: 400;
  color: rgb(136, 136, 136);
}

.author a {
  text-decoration: none;
  font-family: opensans, Arial, sans-serif;
  font-size: 12px;
  font-weight: 700;
  color: rgb(0, 0, 0);
