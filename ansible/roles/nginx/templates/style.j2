  font-size: 12px;
  font-weight: 400;
  text-decoration: none;
  color: rgb(152, 152, 152);
}

.news-title {
  margin: 5px 0 0 0;
  line-height: 17px;
}

.news-link {
  text-decoration: none;
  text-transform: uppercase;
  font-family: opensans, Arial, sans-serif;
  font-size: 14px;
  font-weight: 700;
  color: rgb(0, 0, 0);
